{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 2,
    "name" : "deBubblr",
    "short_name": "deBubblr",
    "description" : "deBubblr analyses your web browsing history to determine the biases, then it suggests websites to diversify the news consumption.",
    "version" : "1.1.0",
    "icons" : {"128" : "icon_128.png"},
    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },
    "permissions" : ["history","tabs"],
    "background": {
        "persistent": true,
        "scripts": [
            "js/background.js"
        ]
    }   
}