{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 2,

    "name" : "deBubblr",
    "short_name": "deBubblr",
    "description" : "Reads Browser History gauging political leaning then suggests articles.",
    "version" : "1.0.0",

    "icons" : {"128" : "icon_128.png"},
    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },
    "permissions" : ["history","tabs","activeTab"],
    "background": {
        "persistent": true,
        "scripts": [
            "js/background.js"
        ]
    }
    
}

